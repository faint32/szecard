<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bar_bg_n"
    android:paddingLeft="2dip"
    android:paddingRight="7dip" >

    <ImageView
        android:id="@+id/btn_tweet_pub_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/head_back"
          style="@style/button_click_bg"
        android:clickable="true" />

    <TextView
        android:id="@+id/tweet_pub_head_title"
        style="@style/detail_head_title"
        android:layout_centerInParent="true"
        android:text="@string/tweet_header_title" />

    <ImageView
        android:id="@+id/btn_tweet_pub_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/write_message_btn"
        android:clickable="true" />

</RelativeLayout>
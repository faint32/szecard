<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logindialog_space"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg" >
    

     <AutoCompleteTextView
        android:id="@+id/login_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="160.0dip"
        android:background="@null"
        android:hint="@string/login_user_name_hint"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="@dimen/text_size_16" /> 
        
     <AutoCompleteTextView
        android:id="@+id/login_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="210.0dip"
        android:background="@null"
        android:hint="@string/login_password_hint"
        android:inputType="textPassword"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="@dimen/text_size_16" /> 

    <ImageView
        android:id="@+id/btnlogin"
        style="@style/btn_login_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62.0dip"
        android:layout_marginTop="300.0dip"
        android:background="@drawable/btn_login_click_bg" />

    <TextView
        android:id="@+id/txtforgetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnlogin"
        android:layout_below="@+id/login_password"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60.0dip"
        android:textColor="@color/forget_password"
        android:textSize="@dimen/text_size_14"
        android:text="@string/login_forget_password" />


</RelativeLayout>